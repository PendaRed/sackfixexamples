<?xml version="1.0" encoding="UTF-8"?>
<!-- http://rerun.me/2014/09/29/akka-notes-logging-and-testing/ -->
<configuration>
    <appender name="FILE"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <encoder>
            <!-- add in [%thread]  if you want it, but with Akka its kinda dull -->
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs\sfinitiator.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxHistory>10</maxHistory>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>50MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>
    <appender
            name="FIXMESSAGE_FILE"
            class="ch.qos.logback.core.rolling.RollingFileAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %msg%n</pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs\sfinitiator.%d{yyyy-MM-dd}.%i.fix.log</fileNamePattern>
            <maxHistory>10</maxHistory>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>200MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>
    <appender
            name="FIXVERBOSEMESSAGE_FILE"
            class="ch.qos.logback.core.rolling.RollingFileAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %msg%n</pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs\sfinitiator.%d{yyyy-MM-dd}.%i.fix.decoded.log</fileNamePattern>
            <maxHistory>10</maxHistory>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>200MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>

    <!-- set level to ERROR to turn this off, and to INFO to turn off human readable -->
    <logger name="fixmessages" level="DEBUG" additivity="false">
        <appender-ref ref="FIXMESSAGE_FILE"/>
    </logger>
    <logger name="fixVerboseMessages" level="DEBUG" additivity="false">
        <appender-ref ref="FIXVERBOSEMESSAGE_FILE"/>
    </logger>

    <root level="DEBUG">
        <appender-ref ref="FILE" />
    </root>
</configuration>